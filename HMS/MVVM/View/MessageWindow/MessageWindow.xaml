<Window x:Class="HMS.MVVM.View.MessageWindow.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMS.MVVM.View.MessageWindow"
        mc:Ignorable="d"
        AllowsTransparency="True" ResizeMode="NoResize"
        Title="MessageWindow" Height="150" Width="400" WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        >
    <Border CornerRadius="10" Background="LightGray">
        <StackPanel VerticalAlignment="Center" Margin="20" >
            <TextBlock Text="{Binding Message}" Style="{StaticResource text}" HorizontalAlignment="Center"/>
            <Button Content="OK" Click="OkButton_Click" Style="{StaticResource pagingButton}" Margin="150 30 150 0"/>
        </StackPanel>
    </Border>
</Window>
